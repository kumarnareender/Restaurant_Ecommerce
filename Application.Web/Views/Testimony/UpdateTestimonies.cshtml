
@{
    ViewBag.Title = "Testimonies";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Testimonies &nbsp; <span id="order-status"></span></h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">Testimonies</a></li>
                <li>Admin</li>
            </ul>
        </div>
    </div>
</div>

<form name="myForm" novalidate>
    <div ng-controller="TestimonyListCtrl" class="form-horizontal">

        <div class="row">
            <div class="col-sm-12">
                <div class="item-loading">
                    <img src="~/Images/ajax-loader.gif" /> Loading...
                </div>

                <div id="delete-btn-container" style="position:relative; top: 30px; display:none;">
                    <button id="btn-update" class="btn btn-primary">Update status</button>
                </div>

                <div style="overflow:auto; margin-top:50px;">
                    <table class="table table-striped table-bordered table-hover" >
                        <thead>
                            <tr>
                                <th>IsActive</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody id="testimoniesBody">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>