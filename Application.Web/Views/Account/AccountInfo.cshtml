
@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Account Information</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">My Auction</a></li>
                <li>Account Info</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <div class="form-group">
            <div class="row">
                <div class="message"></div>
            </div>
        </div>

@{
        if (Application.Common.Utils.GetLoggedInUser() != null)
        {
            var user = Application.Common.Utils.GetLoggedInUser();
            var name = user.Name;
            var email = user.Email;
            var username = user.Username;
            
            <div class="form-group">
                <div class="row">
                    <span class="col-sm-3 right">Mobile (Your username):</span>
                    <div class="col-sm-5">                       
                        <span id="username">@{ @username } &nbsp;</span> <a target="_blank" href="/Account/ChangeUsername">(Change Mobile)</a>              
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <span class="col-sm-3 right">Password:</span>
                    <div class="col-sm-5">
                        <span>*********</span> &nbsp; <a target="_blank" href="/Account/ChangePassword">(Change Password)</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <span class="col-sm-3 right">Name:</span>
                    <div class="col-sm-5">
                        <input type="text" id="name" class="form-control" style="width:220px; height: 30px;" value="@{ @name }" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <span class="col-sm-3 right">Email:</span>
                    <div class="col-sm-5">
                        <input type="text" id="email" class="form-control" style="width:220px; height: 30px;" value="@{ @email }" />
                    </div>
                </div>
            </div>
        }
}
        <div class="form-group">
            <div class="row">
                <h3 class="col-sm-3"></h3>
                <div class="col-sm-9">
                    <button id="btnUpdateUserInfo" type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>
</div>
