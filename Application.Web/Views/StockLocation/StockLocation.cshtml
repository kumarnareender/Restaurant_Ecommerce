@{
    ViewBag.Title = "Stock Location";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}
<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Stock Location</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><span><b>Admin</b></span></li>
                <li>Stock Location</li>
            </ul>
        </div>
    </div>
</div>

<div ng-controller="StockLocationCtrl" ng-cloak>
    <div style="width: 100%;" class="mobile-view-overflow">
        <table class="table table-bordered table-condensed table-hover setup-form">
            <tr class="setup-table-header">
                <th style="text-align:left; width:200px;">
                    <div class="btn-toolbar">
                        <button type="submit" class="btn btn-sm btn-primary" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-plus"></span> Add</button>
                    </div>
                </th>
                <th>Name</th>
            </tr>
            <tr ng-show="addMode">
                <td>
                    <div class="btn-toolbar" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="createStockLocation()"><span class="glyphicon glyphicon-ok"></span> Save</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </td>
                <td>
                    <input ng-model="stockLocation.Name" />
                </td>
            </tr>
            <tr ng-repeat="stockLocation in stockLocationList | orderBy:'Name':true">
                <td>
                    <div class="btn-toolbar" ng-show="stockLocation.editMode == null || stockLocation.editMode == false" style="width:250px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-success" ng-click="toggleEditMode(stockLocation)"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-danger" ng-click="deleteStockLocation(stockLocation)"><span class="glyphicon glyphicon-remove"></span> Delete</button>
                            <button type="submit" style="margin-left:10px; display:none;" class="btn btn-sm btn-warning" ng-click="addAttr(stockLocation)"><span class="glyphicon glyphicon-plus"></span> Attr</button>
                        </div>
                    </div>
                    <div class="btn-toolbar" ng-show="stockLocation.editMode == true" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="updateStockLocation(stockLocation)"><span class="glyphicon glyphicon-ok"></span> Update</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleEditMode(stockLocation)"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </td>
                <td>
                    <span ng-show="stockLocation.editMode == null || stockLocation.editMode == false">{{stockLocation.Name}}</span>
                    <input ng-model="stockLocation.Name" ng-show="stockLocation.editMode == true" style="width: 200px;" />
                </td>
            </tr>
        </table>
    </div>
</div>