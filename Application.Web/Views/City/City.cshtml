
@{
    ViewBag.Title = "City";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>City</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><span><b>Admin</b></span></li>
                <li>City</li>
            </ul>
        </div>
    </div>
</div>



<div ng-controller="CityCtrl" ng-cloak>
        <div style="width: 100%;" class="mobile-view-overflow">
            <table class="table table-bordered table-condensed table-hover setup-form">
                <tr class="setup-table-header">
                    <th style="text-align:left; width:200px;">
                        <div class="btn-toolbar">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-plus"></span> Add</button>
                        </div>
                    </th>
                    <th>Name</th>
                    <th>Postcode</th>
                    <th>ShippingCharge</th>
                    <th class="center" style="width: 200px;">Allow Online Shop</th>
                </tr>
                <tr ng-show="addMode">
                    <td>
                        <div class="btn-toolbar" style="width:200px;">
                            <div class="setup-btn-group">
                                <button type="submit" class="btn btn-sm btn-primary" ng-click="createCity()"><span class="glyphicon glyphicon-ok"></span> Save</button>
                                <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            </div>
                        </div>
                    </td>
                    <td>
                        <input ng-model="city.Name" style="width: 200px;" />
                    </td>
                    <td>
                        <input ng-model="city.Postcode" style="width: 200px;" />
                    </td>
                    <td>
                        <input ng-model="city.ShippingCharge" style="width: 200px;" />
                    </td>
                    <td class="center">
                        <input type="checkbox" ng-model="city.IsAllowOnline" class="setup-form-input" style="width:50px;" />
                    </td>
                </tr>
                <tr ng-repeat="city in cityList | orderBy:'Name':false">
                    <td>
                        <div class="btn-toolbar" ng-show="city.editMode == null || city.editMode == false" style="width:250px;">
                            <div class="setup-btn-group">
                                <button type="submit" class="btn btn-sm btn-success" ng-click="toggleEditMode(city)"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                                <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-danger" ng-click="deleteCity(city)"><span class="glyphicon glyphicon-remove"></span> Delete</button>
                                <button type="submit" style="margin-left:10px; display:none;" class="btn btn-sm btn-warning" ng-click="addAttr(city)"><span class="glyphicon glyphicon-plus"></span> Attr</button>
                            </div>
                        </div>
                        <div class="btn-toolbar" ng-show="city.editMode == true" style="width:200px;">
                            <div class="setup-btn-group">
                                <button type="submit" class="btn btn-sm btn-primary" ng-click="updateCity(city)"><span class="glyphicon glyphicon-ok"></span> Update</button>
                                <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleEditMode(city)"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span ng-show="city.editMode == null || city.editMode == false">{{city.Name}}</span>
                        <input ng-model="city.Name" ng-show="city.editMode == true" style="width: 200px;" />
                    </td>
                    <td>
                        <span ng-show="city.editMode == null || city.editMode == false">{{city.Postcode}}</span>
                        <input ng-model="city.Postcode" ng-show="city.editMode == true" style="width: 200px;" />
                    </td>
                    <td class="center">
                        <span ng-show="city.editMode == null || city.editMode == false">{{city.ShippingCharge}}</span>
                        <input ng-model="city.ShippingCharge" ng-show="city.editMode == true" class="setup-form-input" style="width:50px;" />
                    </td>
                    <td class="center">
                        <span ng-show="city.editMode == null || city.editMode == false">{{city.IsAllowOnline}}</span>
                        <input type="checkbox" ng-model="city.IsAllowOnline" ng-show="city.editMode == true" class="setup-form-input" style="width:50px;" />
                    </td>
                </tr>
            </table>
        </div>
    </div>


