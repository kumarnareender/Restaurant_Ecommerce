
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Promotion</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><span><b>Admin</b></span></li>
                <li>Promotion</li>
            </ul>
        </div>
    </div>
</div>



<div ng-controller="PromotionCtrl" ng-cloak>
    <div style="width: 100%;" class="mobile-view-overflow">
        <table class="table table-bordered table-condensed table-hover setup-form">
            <tr class="setup-table-header">
                <th style="text-align:left; width:200px;">
                    <div class="btn-toolbar">
                        <button type="submit" class="btn btn-sm btn-primary" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-plus"></span> Add</button>
                    </div>
                </th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Coupon</th>
                <th>Percentage</th>
                
            </tr>
            <tr ng-show="addMode">
                <td>
                    <div class="btn-toolbar" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="createPromotion(promotion)"><span class="glyphicon glyphicon-ok"></span> Save</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </td>
                <td>
                    <input class="form-control date-picker startDate" ng-model="promotion.StartDate" type="text" data-date-format="yyyy-mm-dd">
                    @*<span class="calendar-control input-group-addon">
                        <i class="fa fa-calendar bigger-110"></i>
                    </span>*@
                                         
                </td>

                <td>
                    <input class="form-control date-picker endDate" ng-model="promotion.EndDate" type="text" data-date-format="yyyy-mm-dd">
                    @*<span class="calendar-control input-group-addon">
                        <i class="fa fa-calendar bigger-110"></i>
                    </span>*@

                </td>
                <td>
                    <input ng-model="promotion.Coupon" class="form-control"" style="width: 200px;" />
                </td>
                <td>
                    <input ng-model="promotion.Percentage" class="form-control"" style="width: 200px;" />
                </td>
            </tr>
            <tr ng-repeat="promotion in promotionList | orderBy:'Name':false">
                <td>
                    <div class="btn-toolbar" ng-show="promotion.editMode == null || promotion.editMode == false" style="width:250px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-success" ng-click="toggleEditMode(promotion)"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-danger" ng-click="deletePromotion(promotion)"><span class="glyphicon glyphicon-remove"></span> Delete</button>
                            <button type="submit" style="margin-left:10px; display:none;" class="btn btn-sm btn-warning" ng-click="addAttr(promotion)"><span class="glyphicon glyphicon-plus"></span> Attr</button>
                        </div>
                    </div>
                    <div class="btn-toolbar" ng-show="promotion.editMode == true" style="width:200px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="updatePromotion(promotion)"><span class="glyphicon glyphicon-ok"></span> Update</button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleEditMode(promotion)"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                        </div>
                    </div>
                </td>
                <td>
                    <span ng-show="promotion.editMode == null || promotion.editMode == false">{{promotion.StartDate}}</span>
                    <input ng-model="promotion.StartDate" ng-show="promotion.editMode == true" class=" date-picker startDateEdit form-control"" type="text" data-date-format="yyyy-mm-dd" style="width: 200px;" />
                </td>
                <td>
                    <span ng-show="promotion.editMode == null || promotion.editMode == false">{{promotion.EndDate}}</span>
                    <input ng-model="promotion.EndDate" ng-show="promotion.editMode == true" class="date-picker endDateEdit form-control" type="text" data-date-format="yyyy-mm-dd" style="width: 200px;" />
                </td>
                <td class="center">
                    <span ng-show="promotion.editMode == null || promotion.editMode == false">{{promotion.Coupon}}</span>
                    <input ng-model="promotion.Coupon" ng-show="promotion.editMode == true" class="setup-form-input form-control" style="width:200px;" />
                </td>
                <td class="center">
                    <span ng-show="promotion.editMode == null || promotion.editMode == false">{{promotion.Percentage}}</span>
                    <input ng-model="promotion.Percentage" ng-show="promotion.editMode == true" class="setup-form-input form-control" style="width:200px;" />
                </td>
            </tr>
        </table>
    </div>
</div>

