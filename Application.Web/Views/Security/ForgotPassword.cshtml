@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">

                <div class="row">
                    <div class="col-sm-12" style="padding-top: 80px; padding-bottom: 00px;">

                        <div style="border: 1px solid #dcdcdc; background-color: #fff; margin-top: 50px; padding: 40px; padding-top: 20px; max-width: 600px; margin: 20px auto;">

                            <div class="form-group">
                                <div class="row">
                                    <h3 class="col-sm-12 control-label" style="text-align:center">Forgot Password</h3>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="message"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <h4 class="col-sm-4 control-label">Username:</h4>
                                    <div class="col-sm-8">
                                        <input id="mobile" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <h3 class="col-sm-4 control-label"></h3>
                                    <div class="col-sm-8">
                                        <button id="btnSendPassword" type="submit" class="btn btn-primary forgotPassword theme-back-color">Send My Password</button>
                                        <span class="status-msg" style="display:none;">Sending Your Password...</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>