@{
    ViewBag.Title = "Supplier";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}
<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Supplier</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><span><b>Admin</b></span></li>
                <li>Supplier</li>
            </ul>
        </div>
    </div>
</div>

<div ng-controller="SupplierCtrl" ng-cloak>
    <div style="width: 100%;" class="mobile-view-overflow">
        <table class="table table-bordered table-condensed table-hover setup-form">
            <tr class="setup-table-header">
                <th style="text-align:left; width:110px;">
                    <div class="btn-toolbar">
                        <button type="submit" class="btn btn-sm btn-primary" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-plus"></span> Add</button>
                    </div>
                </th>
                <th>Name</th>
                <th>Contact Person</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Address</th>
                @*<th>State</th>*@
                <th>City</th>
                @*<th>Postal Code</th>*@

            </tr>
            <tr ng-show="addMode">
                <td>
                    <div class="btn-toolbar" style="width:110px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="createSupplier()"><span class="glyphicon glyphicon-ok"></span></button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" ng-click="toggleAddMode()"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </div>
                </td>
                <td>
                    <input class="form-control" ng-model="supplier.Name" />
                </td>
                <td>
                    <input class="form-control" ng-model="supplier.Contactperson" />
                </td>
                <td>
                    <input class="form-control" ng-model="supplier.Mobile" />
                </td>
                <td>
                    <input class="form-control" ng-model="supplier.Email" />
                </td>
                <td>
                    <input class="form-control" ng-model="supplier.Address" />
                </td>
                @*<td>
            <input class="form-control" ng-model="supplier.State" />
        </td>*@
                <td>
                    @*<input class="form-control" ng-model="supplier.City" />*@
                    <select id="city" ng-model="supplier.City" class=" form-control city" style="height: 30px; ">
                        <option value="0">Select City</option>
                    </select>
                </td>
                @*<td>
            <input class="form-control" ng-model="supplier.Postcode" />
        </td>*@
            </tr>
            <tr ng-repeat="supplier in supplierList | orderBy:'Name':false">
                <td>
                    <div class="btn-toolbar" ng-show="supplier.editMode == null || supplier.editMode == false" style="width:100px;">
                        <div class="setup-btn-group">
                            <span type="submit" class="btn btn-sm btn-success" ng-click="toggleEditMode(supplier)"><span class="glyphicon glyphicon-pencil"></span></span>
                            <span type="submit" style="margin-left:10px;" class="btn btn-sm btn-danger" ng-click="deleteSupplier(supplier)"><span class="glyphicon glyphicon-remove"></span></span>
                            <span type="submit" style="margin-left:10px; display:none;" class="btn btn-sm btn-warning" ng-click="addAttr(supplier)"><span class="glyphicon glyphicon-plus"></span> Attr</span>
                        </div>
                    </div>
                    <div class="btn-toolbar" ng-show="supplier.editMode == true" style="width:100px;">
                        <div class="setup-btn-group">
                            <button type="submit" class="btn btn-sm btn-primary" ng-click="updateSupplier(supplier)"><span class="glyphicon glyphicon-ok"></span></button>
                            <button type="submit" style="margin-left:10px;" class="btn btn-sm btn-default" placeholder="Cancel" ng-click="toggleEditMode(supplier)"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </div>
                </td>
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Name}}</span>
                    <input class="form-control" ng-model="supplier.Name" ng-show="supplier.editMode == true" style="width: 130px;" />
                </td>
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Contactperson}}</span>
                    <input class="form-control" ng-model="supplier.Contactperson" ng-show="supplier.editMode == true" style="width: 130px;" />
                </td>
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Mobile}}</span>
                    <input class="form-control" ng-model="supplier.Mobile" ng-show="supplier.editMode == true" style="width: 130px;" />
                </td>
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Email}}</span>
                    <input class="form-control" ng-model="supplier.Email" ng-show="supplier.editMode == true" style="width: 150px;" />
                </td>
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Address}}</span>
                    <input class="form-control" ng-model="supplier.Address" ng-show="supplier.editMode == true" style="width: 200px;" />
                </td>
                @*<td>
            <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.State}}</span>
            <input class="form-control" ng-model="supplier.State" ng-show="supplier.editMode == true" style="width: 200px;" />
        </td>*@
                <td>
                    <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.City}}</span>
                    @*<input class="form-control" ng-model="supplier.City" ng-show="supplier.editMode == true" style="width: 200px;" />*@
                    <select id="city_{{supplier.Id}}" ng-model="supplier.City" ng-show="supplier.editMode == true" style="width: 130px;" class=" form-control editCity">
                        <option value="0">Select City</option>
                    </select>
                </td>
                @*<td>
            <span ng-show="supplier.editMode == null || supplier.editMode == false">{{supplier.Postcode}}</span>
            <input class="form-control" ng-model="supplier.Postcode" ng-show="supplier.editMode == true" style="width: 200px;" />
        </td>*@
            </tr>
        </table>
    </div>
</div>