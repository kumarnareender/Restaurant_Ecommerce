
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<style type="text/css">
    table {
        border-collapse: collapse;
    }

    td {
        padding: 6px;
    }

    .fileUpload {
        position: relative;
        overflow: hidden;
        margin: 10px;
    }

        .fileUpload input.upload {
            position: absolute;
            top: 0;
            right: 0;
            margin: 0;
            padding: 0;
            font-size: 20px;
            cursor: pointer;
            opacity: 0;
            filter: alpha(opacity=0);
        }

    .photo-additional {
        color: blue;
        font-weight: 600;
    }

    .photo-primary {
        font-weight: 600;
        color: green;
    }
</style>

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Upload Products</h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">Administration</a></li>
                <li>Upload Excel File</li>
            </ul>
        </div>
    </div>
</div>

<form name="myForm" novalidate>
    <div ng-controller="productUploadCtrl" class="form-horizontal">


        <div class="form-group">
            <div class="col-sm-12">
                <div style="background-color: #ecf9fa; border: 1px solid #b2e6e9; text-align: center;">

                    <table style="margin: 0 auto;">
                        <tr>
                            <td style="padding-right: 30px;">
                                <table>
                                    <tr>
                                        <td class="center">
                                            Download Sample CSV
                                        </td>

                                        <td class="center">
                                            Upload CSV
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="center">
                                            <div class="fileUpload btn btn-primary center" id="downloadCsv">
                                                <span>Download CSV</span>
                                                @*<input id="inputFile" type="file" class="upload" name="file" accept="image/*" onchange="angular.element(this).scope().selectPhoto(this.files)" required />*@
                                            </div>
                                        </td>

                                        <td class="center">
                                            <div class="fileUpload btn btn-primary center">
                                                <span>Browse CSV</span>
                                                @*<input id="inputFile" type="file" class="upload" name="file" accept="image/*" onchange="angular.element(this).scope().selectPhoto(this.files)" required />*@
                                                <input id="inputExcelFile" type="file" class="upload" name="file" onchange="angular.element(this).scope().selectPhoto(this.files)" required />
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="border-left: 1px solid #dcdcdc;"></td>
                            <td style="padding-left: 30px;">
                                <table>
                                    <tr>
                                        <td>
                                            <div class="item-loading">
                                                <img src="~/Images/ajax-loader.gif" /> Loading...
                                            </div>
                                            <div style=" padding:5px;">
                                                <span id="csvName" @*style="height: 100%; width: 100%;"*@ alt="your file" />
                                            </div>
                                            <div id="divSaveCsv" class="center" style="padding:5px; border:1px solid #dcdcdc; margin-top: 2px; display: none;">
                                                <button id="btnUploadPhoto" type="submit" ng-click="uploadCSVFile()" class="btn btn-primary">Save</button>
                                                <button id="btnCsvCancel" type="submit" class="btn btn-default">Cancel</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>

    </div>
</form>