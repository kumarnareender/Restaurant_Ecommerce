@{
    ViewBag.Title = "Activity Logs";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<style type="text/css">
    #myplace-right-section-container {
        min-height: initial !important;
    }
</style>

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Activity Logs &nbsp; <span id="order-status"></span></h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">Report</a></li>
                <li>Activity Logs</li>
            </ul>
        </div>
    </div>
</div>

<form name="myForm" novalidate>
    <div ng-controller="ActivityLogCtrl" class="form-horizontal">

        <div style="border: 1px solid #dcdcdc; padding-top: 20px; padding-bottom:20px; margin: 10px;">

            <div class="container">                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">From Date</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control date-picker" id="dateFrom" type="text" data-date-format="yyyy-mm-dd">
                                    <span class="calendar-control input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">To Date</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control date-picker" id="dateTo" type="text" data-date-format="yyyy-mm-dd">
                                    <span class="calendar-control input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                
                <div class="row right">
                    <div class="col-lg-12">
                        <button ng-click="showReport()" class="btn btn-primary">Show Activity Logs</button>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" style="margin-top:20px;">
            <div class="col-sm-12">
                <div class="item-loading">
                    <img src="~/Images/ajax-loader.gif" /> Loading...
                </div>
                <div>
                    <table id="data-table-activity-logs" class="table table-striped table-bordered table-hover" style="width: 100%;">                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>