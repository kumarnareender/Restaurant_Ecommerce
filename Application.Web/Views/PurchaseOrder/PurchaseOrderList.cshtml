@{
    ViewBag.Title = "Order List";
    Layout = "~/Views/Shared/_Layout_Administration.cshtml";
}

<style type="text/css">
    .order-mode{
        border: 1px solid #dcdcdc;
        padding: 10px;
        margin-right:5px;
    }
    .order-mode-active{
        background-color: #f2f2f2;
        font-weight: 600;
    }
</style>

<div class="page-banner no-subtitle">
    <div class="row">
        <div class="col-md-6">
            <h2>Order List &nbsp; <span id="order-status"></span></h2>
        </div>
        <div class="col-md-6">
            <ul class="breadcrumbs">
                <li><a href="#">My Orders</a></li>
                <li>Order List</li>
            </ul>
        </div>
    </div>
</div>

<form name="myForm" novalidate>
    <div ng-controller="AdminPurchaseOrderListCtrl" class="form-horizontal">
         
        <div style="border: 1px solid #dcdcdc; padding-top: 20px; padding-bottom:20px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Branch</label>
                            <div class="col-sm-8">
                                <select id="branch" name="branch" class="form-control form-group-margin">
                                    <option value="">All Branches</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">From Date</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control date-picker" id="dateFrom" type="text" data-date-format="yyyy-mm-dd">
                                    <span class="calendar-control input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">To Date</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control date-picker" id="dateTo" type="text" data-date-format="yyyy-mm-dd">
                                    <span class="calendar-control input-group-addon">
                                        <i class="fa fa-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Order Mode</label>
                            <div class="col-sm-8">
                                <div class="input-group" style="width:100%;">
                                    <select class="form-control" name="orderMode" id="orderMode">
                                        <option value="">All</option>                                        
                                        <option value="Online">Online</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Order Status</label>
                            <div class="col-sm-8">
                                <div class="input-group" style="width:100%;">
                                    <select class="form-control" name="orderStatus" id="orderStatus">
                                        <option value="">---Please Select---</option>
                                        <option value="Processing">Processing</option>
                                        <option value="Completed">Completed</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row right">
                    <div class="col-lg-12">
                        <button id="showPurchaseOrders" class="btn btn-primary">Show Orders</button>
                    </div>
                </div>
            </div>

        </div>

        @*<br />
        <div class="row">
            <div class="col-md-12">
                <a id="All" class="order-mode" href="#">All</a>
                <a id="Store" class="order-mode" href="#">Store</a>
                <a id="Online" class="order-mode" href="#">Online</a>
                <a id="PhoneOrder" class="order-mode" href="#">Phone Order</a>
            </div>
        </div>*@
        <div class="row">
            <div class="col-sm-12">
                <div class="item-loading">
                    <img src="~/Images/ajax-loader.gif" /> Loading...
                </div>

                <div id="delete-btn-container" style="position:relative; top: 30px; display:none;">
                    <button id="btn-delete" class="btn btn-danger">Delete</button>
                </div>

                <div style="overflow:auto">
                    <table id="data-table-admin-purchase-orderlist" class="table table-striped table-bordered table-hover" style="width: 100%;"></table>
                </div>
            </div>
        </div>
    </div>
</form>